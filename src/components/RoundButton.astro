---
export interface Props {
  href: string
  class?: string
}

const { href, class: className } = Astro.props as Props
---

<div
  data-scroll
  data-scroll-speed="2"
  class={className ? className : '' + ' round-button-container'}
>
  <a {href} class="no-underline round-button relative text-black">
    <div class="round-button-text">
      <slot />
    </div>
  </a>
</div>
