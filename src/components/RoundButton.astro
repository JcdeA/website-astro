---
export interface Props {
  href: string
  class?: string
}

const { href, class: className } = Astro.props as Props
---

<div data-scroll data-scroll-speed="2" class={className + ' round-button-container p-1 bg-white rounded-full' }>
  <div class=" round-button relative bg-white">
    <a {href} class="font-mono tracking-tighter relative no-underline text-black">
      <span class="round-button-text">
        <slot />
      </span>
    </a>
  </div>

</div>